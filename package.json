{
  "name": "paste-and-indent",
  "displayName": "paste-and-indent",
  "description": "Properly indents copied code on paste",
  "version": "0.0.1",
  "bugs": {
    "url": "https://github.com/jefflongo/vscode-paste-and-indent/issues"
  },
  "homepage": "https://github.com/jefflongo/vscode-paste-and-indent/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/jefflongo/vscode-paste-and-indent"
  },
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Formatters",
    "Other"
  ],
  "activationEvents": [
    "onCommand:paste-and-indent.copy",
    "onCommand:paste-and-indent.paste"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [],
    "keybindings": [
      {
        "command": "paste-and-indent.copy",
        "key": "ctrl+c",
        "mac": "cmd+c",
        "when": "editorTextFocus"
      },
      {
        "command": "paste-and-indent.paste",
        "key": "ctrl+v",
        "mac": "cmd+v",
        "when": "editorTextFocus && !editorReadonly"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.21.0",
    "typescript": "^5.7.3"
  }
}
